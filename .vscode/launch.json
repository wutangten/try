{
	"version": "0.2.0",
	"configurations": [
		{ //python
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"stopOnEntry": false //only one F5 needed
		},
		{ //C++ setting
			"name": "(lldb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/classNumber.out", //IMPORTANT: make sure the .out file matches the .out file in task
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "lldb",
			"logging": {
				"trace": true,
				"traceResponse": true,
				"engineLogging": true
			}
		},
		{
			"name": "(lldb) Attach",
			"type": "cppdbg",
			"request": "attach",
			"program": "enter program name, for example ${workspaceFolder}/a.out",
			"processId": "${command:pickProcess}",
			"MIMode": "lldb"
		},
	]
	//End C++ Setting
}